<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:pageModels="clr-namespace:MoneyTransfer.UI.MAUI.PageModels"
             xmlns:userservice="clr-namespace:MoneyTransfer.UI.MAUI.Services.User"
             x:Class="MoneyTransfer.UI.MAUI.Pages.SendTransferPage"
             x:DataType="{x:Type pageModels:SendTransferPageModel}"
             Title="Send Transfer">
    <ContentPage.Resources>
        <Style TargetType="Frame">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                    Value="{StaticResource LightYellowAccent}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
        <Style x:Key="InvalidEntryStyle" TargetType="Entry">
            <Setter Property="TextColor" Value="{StaticResource Magenta}" />
            <Setter Property="BackgroundColor" Value="{StaticResource LightPink}" />
        </Style>
    </ContentPage.Resources>
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding PageAppearingCommand, Mode=OneWay}" />
    </ContentPage.Behaviors>
    <VerticalStackLayout Style="{StaticResource ContainerVerticalStackLayoutStyle}" Spacing="10">
        <Label Text="Step One: Select a user to send to:" TextColor="{StaticResource Primary}" />
        <CollectionView ItemsSource="{Binding Users, Mode=OneWay}" SelectedItem="{Binding SelectedUser, Mode=TwoWay}" SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type userservice:User}">
                    <Frame WidthRequest="100" HeightRequest="140">
                        <VerticalStackLayout>
                            <Image Source="user_solid.png" />
                            <Label Text="{Binding Username, Mode=OneWay}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label Text="Step Two: Enter the amount you are sending:" TextColor="{StaticResource Primary}" />
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Label Text="Amount:" FontSize="18" VerticalOptions="Center" />
            <Entry Text="{Binding Amount, StringFormat='{0:C}', Mode=TwoWay}" FontSize="24" Keyboard="Numeric" 
               WidthRequest="100">
                <Entry.Behaviors>
                    <toolkit:NumericValidationBehavior InvalidStyle="{StaticResource InvalidEntryStyle}" MaximumDecimalPlaces="2" MinimumValue="0.01" Flags="ValidateOnValueChanged" />
                </Entry.Behaviors>
            </Entry>
        </HorizontalStackLayout>
        <Label Text="Step Three: Click Send transfer:" TextColor="{StaticResource Primary}" />
        <Button Command="{Binding SendTransferCommand, Mode=OneWay}" IsEnabled="{Binding CanSendTransfer, Mode=OneWay}" Text="Send transfer" />
    </VerticalStackLayout>
</ContentPage>